<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.katiejoy.mediready">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="MediReady"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="MediReady">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DateActivity" />
        <activity android:name=".DatePickerActivity" />
        <activity android:name=".AddEventActivity">
            <intent-filter>
                <action android:name="com.katiejoy.mediready.AddEventActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".DeleteEventActivity" />
        <intent-filter>
            <action android:name="android.intent.action.DeleteEventActivity" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>
    </application>

</manifest>